
  <veiw class="index-container">
    
  <view class="swiper-box">
    <swiper class="boy-swiper" indicator-dots="{{$Swiper$dots}}" autoplay="{{$Swiper$autoplay}}" interval="{{$Swiper$interval}}" duration="{{$Swiper$duration}}" circular="circular">
      <block wx:for="{{$Swiper$imgUrls}}" wx:for-index="$Swiper$index" wx:for-item="$Swiper$item" wx:key="$Swiper$index">
        <swiper-item>
          <image src="{{$Swiper$item}}" class="boy-swiper__image" mode="widthFix"/>
        </swiper-item>
      </block>
    </swiper>
  </view>

    <!-- 科目区域 -->
    <view class="index-subject">
      <view class="index-subject-box">
        <block wx:for="{{list.subjects}}" wx:for-index="index" wx:for-item="item" wx:key="index">
          <view class="subject-box" bindtap="handleToSubject" data-wpyhandletosubject-a="{{index}}">
            <view class="subject-box-poster">
              <image src="{{item.poster}}"/>
            </view>
            <view class="subject-box-name">{{item.name}}</view>
          </view>
        </block>
        <!-- <view class="subject-box" bindtap="handleViewMore">
          <view class="subject-box-poster">
            <image src="../assets/index/index1_01.png" />
          </view>
          <view class="subject-box-name">查看更多</view>
        </view> -->
      </view>
    </view>
    
  <view class="recommend-nav">
    <view class="recommend-box">
      <view class="name">
        {{$RecommendNav$msg.title}}
      </view>
      <view class="icon" bindtap="$RecommendNav$toView" hidden="{{$RecommendNav$isShow}}">
        <image src="../assets/icon/iconfont-nav-right-arrow.png"/>
      </view>
    </view>
  </view>

    <!-- 精品推荐 -->
    <view class="recommend-lesson">
        <view class="recommend-lesson-wrapper">
          <block wx:for="{{list.recommendCourse}}" wx:for-index="index" wx:for-item="item" wx:key="index">  
            <view class="lesson-box" bindtap="toListsDetails" data-id="{{item.id}}" data-page="lessonDetail">
              <view class="lesson-poster">
                <image src="http://th-test.oss-cn-shanghai.aliyuncs.com/upload/teach/image/20180118/120644113_50254.png?Expires=4671922005&OSSAccessKeyId=LTAIrAATEK6r8Lq3&Signature=ZgUoWZkwbiF4Xb4wgDG3hY1QyX4%3D" mode="widthFix"/>
              </view>
              <view class="lesson-name">{{item.name}}</view>
              <view class="lesson-num">{{item.enrollStudents || 10}}人报名</view>
            </view>
          </block>
        </view>
    </view>
    
  <view class="recommend-nav">
    <view class="recommend-box">
      <view class="name">
        {{$RecommendNavSchool$msg.title}}
      </view>
      <view class="icon" bindtap="$RecommendNavSchool$toView" hidden="{{$RecommendNavSchool$isShow}}">
        <image src="../assets/icon/iconfont-nav-right-arrow.png"/>
      </view>
    </view>
  </view>

    <!-- 校区环境 -->
    <view>
      <scroll-view class="scroll-view_H" scroll-x style="width: 100%" scroll-with-animation="true">
        <block wx:for="{{list.schools}}" wx:for-index="index" wx:for-item="school" wx:key="key">
        <view class="school-display" data-id="{{school.id}}" bindtap="toListsDetails" data-page="school">
          <image src="../assets/school/school_01.png" mode="widthFix"/>
          <view class="shade">{{school.name}}</view>
        </view>
        </block>
      </scroll-view>
    </view>
    
  <view class="recommend-nav">
    <view class="recommend-box">
      <view class="name">
        {{$RecommendNavTeacher$msg.title}}
      </view>
      <view class="icon" bindtap="$RecommendNavTeacher$toView" hidden="{{$RecommendNavTeacher$isShow}}">
        <image src="../assets/icon/iconfont-nav-right-arrow.png"/>
      </view>
    </view>
  </view>

