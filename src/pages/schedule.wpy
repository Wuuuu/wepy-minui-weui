        for(let i=0;i<7;i++) {
          week[i].day = moment(theWeekFirstDayOfDate).add(i, 'd').format("DD") // åˆå§‹åŒ–weekæ•°ç»„
          week[i].date = moment(theWeekFirstDayOfDate).add(i, 'd').format("YYYY-MM-DD") // åˆå§‹åŒ–weekæ•°ç»„
